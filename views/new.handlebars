<div class="container d-flex justify-content-center py-5">
  <form action="/restaurants" method="POST">
    <div class="form-group">
      <i class="fas fa-hamburger pr-2"></i>
      <label for="name">餐廳名稱 :</label>
      <input type="text" placeholder="請輸入餐廳名稱..." name="name" required>
    </div>
    <div class="form-group">
      <i class="fas fa-font"></i>
      <label for="name">餐廳英文名稱 :</label>
      <input type="text" placeholder="請輸入餐廳英文名稱..." name="name_en">
    </div>
    <div class="form-group">
      <i class="fas fa-utensils pr-2"></i>
      <label for="name">餐廳類別 :</label>
      <input type="text" placeholder="請輸入餐廳類別..." name="category" required>
    </div>
    <div class=" form-group">
      <i class="fas fa-map-marker-alt pr-2"></i>
      <label for="name">餐廳地址 :</label>
      <input type="text" placeholder="請輸入餐廳地址..." name="location" required>
    </div>
    <div class="form-group">
      <i class="fas fa-location-arrow pr-2 fa-xs"></i>
      <label for="name"> Google Map :</label>
      <input type="text" placeholder="https://" name="google_map" required>
    </div>
    <div class="form-group">
      <i class="fas fa-mobile-alt pr-2"></i>
      <label for="name">餐廳電話 :</label>
      <input type="text" placeholder="請輸入餐廳電話..." name="phone" required>
    </div>
    <div class="form-group">
      <i class="fas fa-star fa-xs"></i>
      <label for="name">餐廳評分 :</label>
      <input type="text" placeholder="1~5分" name="rating" required>
    </div>
    <div class="form-group">
      <i class="fas fa-pencil-alt"></i>
      <label for="name">餐廳敘述 :</label>
      <input type="text" placeholder="請輸入餐廳敘述..." name="description">
    </div>
    <div class="form-group">
      <i class="fas fa-images"></i>
      <label for="name">餐廳圖片 :</label>
      <input type="text" placeholder="https://" name="image" required>
    </div>
    <div class="form-group d-flex justify-content-end">
      <button class="btn btn-outline-secondary m-1" type="submit">新增</button>
      <a class="btn btn-outline-primary m-1" href="/">返回</a>
    </div>
  </form>
</div>