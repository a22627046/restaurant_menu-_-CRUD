<div class="container py-5">
  <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
    <div class="form-group">
      <i class="fas fa-hamburger pr-2"></i>
      <label for="name">餐廳名稱 :</label>
      <input type="text" placeholder="餐廳名稱" name="name" value="{{ restaurant.name }}">
    </div>
    <div class="form-group">
      <i class="fas fa-font"></i>
      <label for="name">餐廳英文名稱 :</label>
      <input type="text" placeholder="餐廳英文名稱" name="name_en" value="{{ restaurant.name_en }}">
    </div>
    <div class="form-group">
      <i class="fas fa-utensils pr-2"></i>
      <label for="name">餐廳類別 :</label>
      <input type="text" placeholder="餐廳類別" name="category" value="{{ restaurant.category }}">
    </div>
    <div class=" form-group">
      <i class="fas fa-map-marker-alt pr-2"></i>
      <label for="name">餐廳地址 :</label>
      <input type="text" placeholder="餐廳地址" name="location" value="{{ restaurant.location }}">
    </div>
    <div class="form-group">
      <i class="fas fa-location-arrow pr-2 fa-xs"></i>
      <label for="name"> Google Map :</label>
      <input type="text" placeholder="餐廳 googlemap" name="google_map" value="{{ restaurant.google_map }}">
    </div>
    <div class="form-group">
      <i class="fas fa-mobile-alt pr-2"></i>
      <label for="name">餐廳電話 :</label>
      <input type="text" placeholder="餐廳電話" name="phone" value="{{ restaurant.phone }}">
    </div>
    <div class="form-group">
      <i class="fas fa-star fa-xs"></i>
      <label for="name">餐廳評分 :</label>
      <input type="text" placeholder="1~5分" name="rating" value="{{ restaurant.rating }}">
    </div>
    <div class="form-group">
      <i class="fas fa-pencil-alt"></i>
      <label for="name">餐廳敘述 :</label>
      <input type="text" placeholder="餐廳敘述" name="description" value="{{ restaurant.description }}">
    </div>
    <div class="form-group">
      <i class="fas fa-images"></i>
      <label for="name">餐廳圖片 :</label>
      <input type="text" placeholder="餐廳圖片" name="image" value="{{ restaurant.image }}">
    </div>
    <button class="btn btn-outline-success" type="submit">儲存</button>
    <a class="btn btn-outline-primary" href="/restaurants/{{restaurant._id}}">返回</a>
  </form>
</div>